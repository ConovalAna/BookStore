@model IEnumerable<BookStore.DAL.Entities.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row row-cols-2 row-cols-sm-2 row-cols-md-4 row-cols-lg-4 g-3">

    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card" >
                <img src=" @Html.DisplayFor(modelItem => item.ImageURL)" class="card-img-top card" alt="...">
                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">
                        @if (item.ShortDescription.Length <= 100)
                        {
                            @Html.DisplayFor(modelItem => item.ShortDescription)
                        }
                        else
                        {
                            @(item.ShortDescription.ToString().Substring(0, 100) + "...")
                        }
                    </p>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AuthorID">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.AuthorID">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AuthorID">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
